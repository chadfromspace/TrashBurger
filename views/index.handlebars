<h1>Trash Burger</h1>

<img class="logo" src="/assets/img/img.png">

<div class="listSelection">
<ul class="ul1">
  {{#each burgers}}
    {{#unless eaten}}
    {{>burgers/burger-block eaten=true}}
    {{/unless}}
  {{/each}}
</ul>

<ul class="ul2">
  {{#each burgers}}
    {{#if eaten}}
        {{> burgers/burger-block eaten=false}}
    {{/if}}
  {{/each}}
</ul>
</div>

<br>

<form class="burgerFormComplete">
  <div class="form">
    <input type="text" id="burgerForm" name="name">
  </div>
  <button type="submit">Add Burger</button>
</form>